/// {
///     "description": "attributes in apply",
///     "yate": "attributes.08.yate",
///     "result": "<h1 class=\"b-hello b-first b-second b-third\">Hello, nop</h1>"
/// }

match / {
    <h1 class="b-hello">
        apply .items.item
        "Hello, { .username }"
    </h1>
}

match .item {
    @class += " b-{ .id }"
}


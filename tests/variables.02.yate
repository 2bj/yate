/// {
///     description: 'variable with if value',
///     data: {
///         username: 'nop'
///     },
///     result: '<h1 class="b-hello">Hello, nop</h1>'
/// }

match / {
    a = if .valid {
        <h1>
            @class = "b-hello"
            "Hello, { .username }"
        </h1>
    }
    a
}


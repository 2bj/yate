/// {
///     "description": "variable with attribute value can be used multiple times",
///     "yate": "variables.06.yate",
///     "result": "<h1 class=\"b-hello\">Hello, nop</h1><h1 class=\"b-hello\">Bye, nop</h1>"
/// }

match / {
    attrs = (
        @class = "b-hello"
    )
    <h1>
        attrs
        "Hello, { .username }"
    </h1>
    <h1>
        attrs
        "Bye, { .username }"
    </h1>
}

